extends layout

block content
    script(src='/javascripts/files.js')
    #createFolderModal.modal.fade(role='dialog')
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            span.close(type='button', data-dismiss='modal') Ã—
            h4.modal-title New folder
          .modal-body
            input#folderName(type='text')
          .modal-footer
            span#btn-create-folder.btn.btn-default(type='button', data-dismiss='modal') Create
            span.btn.btn-default(type='button', data-dismiss='modal') Close
    #renameFileModal
    span.btn.btn-primary.col-xs-2.col-xs-offset-10(onclick='signOut()')
      | Sign out
    .container.file-page
      .row
        h3 Manage file
        .folder-chosen
          h6
        .form-help
        .row.form-upload
          .col-xs-2.col-sm-1
            form#uploadFile
              span.btn.btn-primary.btn-file
                | Upload file 
                input#filePicker(name='file', type='file', single='')
              input#folderId(type='hidden', name='folderId')
              input#folderType(type='hidden', name='folderType')
          .col-xs-2.col-sm-1
            span.btn.btn-primary(data-toggle='modal', data-target='#createFolderModal')
              | Create folder
        div
          table.table.table-bordered
            thead
              tr
                th
                  .row
                    .col-xs-2.col-sm-1
                      | Source
                    .col-xs-1
                    .col-xs-5
                      | Title
                    .col-xs-1
                      | Size
                    .col-xs-2.col-lg-1
                    .col-xs-2.col-lg-1
            tbody.list-files
              td.spinner-contains
                .spinner
                  .bounce1
                  .bounce2
                  .bounce3

